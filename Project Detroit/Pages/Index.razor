@page "/welcome"
@using Project.Detroit.Dialogs
@using Project.Detroit.Models
@using Project.Detroit.Services
@inject NavigationManager _navigationManager
@inject IDialogService DialogService
@inject UserAccountService _userAccountService

<PageTitle>Project Detroit: Welcome</PageTitle>

<MudContainer Class="mt-4 mb-4">
    <MudGrid>
        <MudItem xs="12" Class="d-flex justify-center align-center">
        <MudImage Src="/images/money.jpg" Fluid="true" Alt="Welcome Image" Class="img-fluid rounded mb-4" />
    </MudItem>
        <MudItem xs="12">
            <MudStack Class="welcome-content">
                <MudText Typo="Typo.h2" Class="mb-4">Welcome to Project Detroit</MudText>
                <MudText Typo="Typo.body1" Class="mb-3">
                    An amazing application for managing expenses and reports in groups.
                </MudText>
                <MudText Typo="Typo.body1" Class="mb-3">
                    Are you tired of the hassle of managing expenses and reports in your groups? Look no further!
                    Project Detroit is here to simplify your group management tasks and make collaboration
                    effortless.
                </MudText>
                <MudText Typo="Typo.body1" Class="mb-3">
                    With Project Detroit, you can create and manage groups, track expenses, send and view reports,
                    and much more. Say goodbye to the stress of managing finances within your groups and focus on
                    what matters most – building strong connections and achieving your goals together.
                </MudText>
                <MudStack Class="cta-buttons mt-4">
                    <MudButton Class="mr-4" Variant="Variant.Filled" StartIcon="@Icons.Material.Filled.Group"
                               Color="Color.Error" Size="Size.Large" @onclick="GoToSelectGroup">GET STARTED</MudButton>
                    <MudButton Class="mr-4" Variant="Variant.Outlined" StartIcon="@Icons.Material.Filled.Info"
                               Color="Color.Dark" Size="Size.Large" @onclick="InfoDialog">LEARN MORE</MudButton>
                </MudStack>
            </MudStack>
        </MudItem>
    </MudGrid>
    <MudDivider Class="mt-5 mb-5" />
    <MudGrid>
        <MudItem xs="12">
            <MudText Typo="Typo.h4" Class="mb-4">Key Features of Project Detroit</MudText>
        </MudItem>
        <MudItem xs="12" sm="6" md="4">
            <MudStack Class="feature-card text-center">
                <MudIcon Icon="@Icons.Material.Filled.Groups" Size="Size.Large" Class="mb-3" />
                <MudText Typo="Typo.h6" Class="mb-3">Create and Manage Groups</MudText>
                <MudText Typo="Typo.body1">
                    Project Detroit allows you to create and manage groups effortlessly. Whether it's for
                    your family, friends, or a team project, you can set up a group and invite members with
                    just a few clicks.
                </MudText>
            </MudStack>
        </MudItem>
        <MudItem xs="12" sm="6" md="4">
            <MudStack Class="feature-card text-center">
                <MudIcon Icon="@Icons.Material.Filled.Money" Size="Size.Large" Class="mb-3" />
                <MudText Typo="Typo.h6" Class="mb-3">Track Expenses</MudText>
                <MudText Typo="Typo.body1">
                    Keep track of your group's expenses easily with Project Detroit. You can add and manage
                    expenses, assign them to specific members, and view detailed expense reports in real-time.
                </MudText>
            </MudStack>
        </MudItem>
        <MudItem xs="12" sm="6" md="4">
            <MudStack Class="feature-card text-center">
                <MudIcon Icon="@Icons.Material.Filled.Payments" Size="Size.Large" Class="mb-3" />
                <MudText Typo="Typo.h6" Class="mb-3">Make Payments</MudText>
                <MudText Typo="Typo.body1">
                    Simplify group payments with Project Detroit. You can easily split expenses, track pending
                    payments, and make quick transactions to settle debts within the group.
                </MudText>
            </MudStack>
        </MudItem>
        <MudItem xs="12" sm="6" md="4">
            <MudStack Class="feature-card text-center">
                <MudIcon Icon="@Icons.Material.Filled.Person" Size="Size.Large" Class="mb-3" />
                <MudText Typo="Typo.h6" Class="mb-3">Manage Group Members</MudText>
                <MudText Typo="Typo.body1">
                    Invite and manage group members seamlessly with Project Detroit. You can easily add or remove
                    members, assign roles, and keep everyone updated on group activities.
                </MudText>
            </MudStack>
        </MudItem>
        <MudItem xs="12" sm="6" md="4">
            <MudStack Class="feature-card text-center">
                <MudIcon Icon="@Icons.Material.Filled.Notifications" Size="Size.Large" Class="mb-3" />
                <MudText Typo="Typo.h6" Class="mb-3">Receive Notifications</MudText>
                <MudText Typo="Typo.body1">
                    Stay informed with Project Detroit's notification system. You'll receive updates on group
                    activities, pending payments, and important events to keep everyone on the same page.
                </MudText>
            </MudStack>
        </MudItem>
        <MudItem xs="12" sm="6" md="4">
            <MudStack Class="feature-card text-center">
                <MudIcon Icon="@Icons.Material.Filled.InsertDriveFile" Size="Size.Large" Class="mb-3" />
                <MudText Typo="Typo.h6" Class="mb-3">Send and View Reports</MudText>
                <MudText Typo="Typo.body1">
                    Communicate effectively with your group members by sending and viewing reports. You can
                    create and share detailed reports on expenses, progress, or any other important
                    information.
                </MudText>
            </MudStack>
        </MudItem>
    </MudGrid>
</MudContainer>

@code {
    [Parameter] public Guid userId { get; set; }

    private async Task GoToSelectGroup()
    {
       _navigationManager.NavigateTo($"/Expenses/groupExpenses/selectGroup");
    }

    private void InfoDialog()
    {
        var options = new DialogOptions { CloseOnEscapeKey = true };
        DialogService.Show<AboutDialog>("About Project Detroit", options);
    }
}